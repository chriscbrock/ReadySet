<Window x:Class="ReadySet.Views.CommandView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="75" Width="525" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None"
        BorderThickness="15px" BorderBrush="#33000000" AllowsTransparency="True" ShowInTaskbar="False">
    <Border BorderThickness="1px" BorderBrush="Black">
        <Grid FocusManager.FocusedElement="{Binding ElementName=command}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Width="auto" Height="auto" FontSize="30px" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" Padding="5,0,0,0">cmd&gt;</Label>
            <TextBox x:Name="command" Width="auto" Height="auto" FontSize="30px" BorderThickness="0" Grid.Column="1" VerticalAlignment="Center" />
        </Grid>
    </Border>
</Window>
